<Window x:Class="lab4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:lab4.Converters"
        mc:Ignorable="d"
        xmlns:cc="clr-namespace:lab4.CC"
        Title="MainWindow" Height="768" Width="1400"
        MinHeight="768" MinWidth="1200"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        x:Name="mainWindow"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        Cursor="D:\Labs\OOP\lab4\lab4\Assets\1.cur"
        FontSize="15">
    <Window.Resources>
        <converters:WidthToColumnsConverter x:Key="WidthToColumnsConverter" />
        <converters:DiscountPriceConverter x:Key="DiscountPriceConverter" />
        <converters:ZeroToCollapsedConverter x:Key="ZeroToCollapsedConverter" />
    </Window.Resources>
    <Grid 
        Background="{DynamicResource DefaultBackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/> 
        </Grid.RowDefinitions>
        <!--#region Logo-->
        <Grid HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <Image Source="Assets/NordAlt.png" Stretch="Fill"/>
        </Grid> 
        <!--#endregion-->
        <!--#region Top NavMenu -->
        <Grid
            Background="{DynamicResource CanvasBrush}"
            Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <!--#region Header-->
            <!--Left Corner-->
            <Polygon
                Fill="{DynamicResource DimBrush}"
                HorizontalAlignment="Left"
                Margin="40,0,100,0"
                Stretch="Uniform"
                Height="10"
                VerticalAlignment="Top"
                MouseDown="Polygon_MouseDown">
                <Polygon.Points>
                    <Point X="0" Y="0"/>
                    <Point X="4" Y="4"/>
                    <Point X="4" Y="0"/>
                </Polygon.Points>
            </Polygon>
            <!--Center-->
            <Rectangle
                Fill="{DynamicResource DimBrush}"
                Margin="50,0,110,0"
                Height="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                MouseDown="Polygon_MouseDown"/>
            <!--Right Corner-->
            <Polygon
                Fill="{DynamicResource DimBrush}"
                HorizontalAlignment="Right"
                Margin="40,0,100,0"
                Stretch="Uniform"
                Height="10"
                VerticalAlignment="Top"
                MouseDown="Polygon_MouseDown">
                <Polygon.Points>
                    <Point X="0" Y="0"/>
                    <Point X="-4" Y="4"/>
                    <Point X="-4" Y="0"/>
                </Polygon.Points>
            </Polygon>
            <!--#endregion-->
            
            <!--#region Max Min Close-->
            <StackPanel
                Grid.RowSpan="2"
                Panel.ZIndex="1"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="8">
                <StackPanel
                Grid.RowSpan="2"
                Panel.ZIndex="1"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="8">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Width" Value="25"/>
                            <Setter Property="Height" Value="25"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate
                                    TargetType="{x:Type Button}">
                                        <Border
                                            CornerRadius="50"
                                        Background="{TemplateBinding Background}">
                                            <Path
                                            Data="{Binding Content, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}"
                                            Fill="{DynamicResource SecondaryBrush}"
                                            Height="{TemplateBinding FontSize}"
                                            Width="{TemplateBinding FontSize}"
                                            Stretch="Uniform"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#606060" />
                                </Trigger>
                                <Trigger Property="IsMouseCaptured" Value="True">
                                    <Setter Property="Background" Value="#303030" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                        <Style 
                            x:Key="MaximizedButtonStyle" 
                            TargetType="{x:Type Button}"
                            BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Content" Value="{StaticResource maximize_icon}"/>
                            <Style.Triggers>
                                <DataTrigger 
                                    Binding="{Binding WindowState, ElementName=mainWindow}" Value="Maximized">
                                    <Setter Property="Content" Value="{StaticResource restore_icon}"/>
                                </DataTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#606060" />
                                </Trigger>
                                <Trigger Property="IsMouseCaptured" Value="True">
                                    <Setter Property="Background" Value="#303030" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Resources>
                    <Button 
                        Name = "minimazeButton"
                        Content="{StaticResource minimize_icon}"
                        Click="minimazeButton_Click"/>
                    <Button 
                        Name = "maxmazeButton"
                        Style="{StaticResource MaximizedButtonStyle}"
                        Click="maxmazeButton_Click"/>
                    <Button 
                        Style="{StaticResource CloseButton}"
                        Name = "closeButton"
                        Content="{StaticResource close_icon}"
                        Click="closeButton_Click"/>
                </StackPanel>
            </StackPanel>
            <!--#endregion-->
            
            <!--#region Navigation-->
            <Grid
                Grid.Row="1">
                <!--#region SearchBox-->
                <Border
                    CornerRadius="10"
                    Background="{DynamicResource DimBrush}"
                    HorizontalAlignment="Left"
                    Height="40"
                    MinWidth="400"
                    Margin="50,0"
                    Padding="10,0,10,0">
                <Grid 
                    Background="{DynamicResource DimBrush}"
                    HorizontalAlignment="Left"
                    Height="40"
                    MinWidth="400">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Path
                        Data="{StaticResource search_icon}"
                        Fill="{DynamicResource SecondaryBrush}"
                        Stretch="Uniform"
                        Height="15"
                        Width="15"/>
                    <TextBox 
                        x:Name="SearchInput"
                        Grid.Column="1"
                        MaxLength="50"
                        ContextMenu="{x:Null}"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="{DynamicResource SecondaryBrush}"
                        VerticalAlignment="Center"
                        TextChanged="SearchBox_TextChanged"/>
                </Grid>
            </Border>
                <!--#endregion-->
            </Grid>
            <!--#endregion-->
        </Grid>
        <!--#endregion-->
        <!--#region Left NavMenu-->
        <StackPanel
            Background="{DynamicResource CanvasBrush}"
            Grid.Row="1"
            Grid.RowSpan="2">
            <RadioButton
                    Style="{StaticResource LeftMenu}"
                    x:Name="HomeRadioButton"
                    Background="Transparent"
                    BorderThickness="0"
                    Content="{StaticResource home_icon}"
                    IsChecked="True"/>
            <RadioButton
                    Style="{StaticResource LeftMenu}"
                    x:Name="ShoppingCardRadioButton"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="ShoppingCart_Click"
                    Content="{StaticResource store_icon}"/>
            <RadioButton
                x:Name="ManagmentRadioButton"
                Click="ManagmentRadioButton_Click"
                    Style="{StaticResource LeftMenu}"
                    Background="Transparent"
                    BorderThickness="0"
                    Content="{StaticResource games_icon}"/>
            <RadioButton
                    Style="{StaticResource LeftMenu}"
                    x:Name="SettingsRadioButton"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="SettingsRadioButton_Click"
                    Content="{StaticResource settings_icon}"/>
        </StackPanel>
        <!--#endregion-->
        <!--#region Content-->
        <!--#region Sort Section-->
