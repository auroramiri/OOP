        <!--#endregion-->
        <Grid Grid.Column="1"
              Grid.Row="2"
              HorizontalAlignment="left"
              x:Name="filtersPanel"
              Width="60"
              Panel.ZIndex="1000"
              Background="{DynamicResource CanvasBrush}">
            <!--#region Filters-->
            <StackPanel>
                <Grid
                    Height="60">
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="73,-20,0,0"
                        Text="{DynamicResource filtersText}"
                        Style="{StaticResource titleText}"
                        Foreground="{DynamicResource SecondaryBrush}"
                        FontSize="22"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"/>
                    <ToggleButton x:Name="filtersTg_Btn"
                                  Grid.Column="0"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"
                                  Margin="18,-20,0,0"
                                  Height="30"
                                  Width="30"
                                  BorderThickness="0"
                                  Style="{StaticResource FiltersTbStyle}" 
                                  Unchecked="filtersTg_Btn_Unchecked" 
                                  Checked="filtersTg_Btn_Checked">
                        <ToggleButton.Background>
                            <ImageBrush ImageSource="Assets/tgBtn_default.png"
                                        Stretch="None"/>
                        </ToggleButton.Background>
                        <ToggleButton.Triggers>
                            <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                                <BeginStoryboard>
                                    <Storyboard x:Name="HideFiltersPanel">
                                        <DoubleAnimation 
                                            Storyboard.TargetName="filtersPanel"
                                            Storyboard.TargetProperty="Width"
                                            BeginTime="0:0:0"
                                            From="230"
                                            To="60"
                                            Duration="0:0:0.2">
                                            
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="ToggleButton.Checked">
                                <BeginStoryboard>
                                    <Storyboard x:Name="ShowFiltersPanel">
                                        <DoubleAnimation 
                                            Storyboard.TargetName="filtersPanel"
                                            Storyboard.TargetProperty="Width"
                                            BeginTime="0:0:0"
                                            From="60"
                                            To="230"
                                            Duration="0:0:0.2">

                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ToggleButton.Triggers>
                    </ToggleButton>
                </Grid>
                <ListView  x:Name="LVFilters"
                               Background="{DynamicResource CanvasBrush}"
                               BorderBrush="Transparent"
                               ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListViewItem HorizontalAlignment="Left"
                                      Margin="0,0,0,15"
                                  x:Name="allFilter"
                                  Selected="allFilter_Selected"
                                  MouseEnter="ListViewItem_MouseEnter" >

                        <StackPanel Orientation="Horizontal"
                                        Width="230">

                            <Path Data="{StaticResource reset_icon}"
                                Fill="White"
                                  Margin="12,0,0,0"/>

                            <TextBlock Text="{DynamicResource allFilterText}"
                                       HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                                           Margin="25,0,0,0"
                                           Style="{StaticResource titleText}"/>

                        </StackPanel>

                        <!--// Tooltip //-->

                        <ListViewItem.ToolTip>

                            <ToolTip x:Name="tt_all"
                                         Content="{DynamicResource allFilterText}"
                                         Style="{StaticResource tt_style}"/>

                        </ListViewItem.ToolTip>

                    </ListViewItem>
                    <ListViewItem HorizontalAlignment="Left"
                                      Margin="0,0,0,15"
                                  x:Name="discountFilter"
                                  Selected="discountFilter_Selected"
                                  MouseEnter="ListViewItem_MouseEnter" >

                        <StackPanel Orientation="Horizontal"
                                        Width="230">

                            <Path Data="{StaticResource upload_icon}"
                                Fill="White"
                                  Margin="12,0,0,0"/>

                            <TextBlock Text="{DynamicResource discountFilterText}"
                                           Margin="25,0,0,0"
                                       HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                                           Style="{StaticResource titleText}"/>

                        </StackPanel>

                        <!--// Tooltip //-->

                        <ListViewItem.ToolTip>

                            <ToolTip x:Name="tt_discount"
                                         Content="{DynamicResource discountFilterText}"
                                         Style="{StaticResource tt_style}"/>

                        </ListViewItem.ToolTip>

                    </ListViewItem>
                    <ListViewItem HorizontalAlignment="Left"
                                      Margin="0,0,0,15"
                                  x:Name="inStockFilter"
                                  Selected="inStockFilter_Selected"
                                  MouseEnter="ListViewItem_MouseEnter" >

                        <StackPanel Orientation="Horizontal"
                                        Width="230">

                            <Path Data="{StaticResource in_stock_icon}"
                                Fill="White"
                                  Margin="2,0,0,0"/>

                            <TextBlock Text="{DynamicResource inStockFilterText}"
                                           Margin="25,0,0,0"
                                       HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                                           Style="{StaticResource titleText}"/>

                        </StackPanel>

                        <!--// Tooltip //-->

                        <ListViewItem.ToolTip>

                            <ToolTip x:Name="tt_inStock"
                                         Content="{DynamicResource inStockFilterText}"
                                         Style="{StaticResource tt_style}"/>

                        </ListViewItem.ToolTip>

                    </ListViewItem>
                    <ListViewItem HorizontalAlignment="Left"
                                      Margin="0,0,0,15"
                                  x:Name="outOfStockFilter"
                                  Selected="outOfStockFilter_Selected"
                                  MouseEnter="ListViewItem_MouseEnter" >

                        <StackPanel Orientation="Horizontal"
                                        Width="230">

                            <Path Data="{StaticResource out_of_stock_icon}"
                                Fill="White"/>

                            <TextBlock Text="{DynamicResource outOfStockFilterText}"
                                           Margin="25,0,0,0"
                                       HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                                           Style="{StaticResource titleText}"/>

                        </StackPanel>

                        <!--// Tooltip //-->

                        <ListViewItem.ToolTip>

                            <ToolTip x:Name="tt_outOfStock"
                                         Content="{DynamicResource outOfStockFilterText}"
                                         Style="{StaticResource tt_style}"/>

                        </ListViewItem.ToolTip>

                    </ListViewItem>
                    
                    <ListView.ItemContainerStyle>

                        <Style TargetType="ListViewItem">

                            <Setter Property="Template">

                                <Setter.Value>

                                    <ControlTemplate TargetType="{x:Type ListViewItem}">

                                        <Border x:Name="Bd"
                                                    Height="50"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Background="{DynamicResource CanvasBrush}"
                                                    Padding="{TemplateBinding Padding}"
                                                    SnapsToDevicePixels="True">

                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>

                                        </Border>

                                        <ControlTemplate.Triggers>

                                            <MultiTrigger>

                                                <MultiTrigger.Conditions>

                                                    <Condition Property="IsMouseOver" Value="True"/>
                                                    <Condition Property="IsSelected" Value="False"/>

                                                </MultiTrigger.Conditions>

                                                <Setter Property="Background"
                                                            TargetName="Bd"
                                                            Value="#404D5B"/>

                                                <Setter Property="BorderBrush"
                                                            TargetName="Bd"
                                                            Value="#404D5B"/>

                                            </MultiTrigger>

                                        </ControlTemplate.Triggers>

                                    </ControlTemplate>

                                </Setter.Value>

                            </Setter>

                        </Style>

                    </ListView.ItemContainerStyle>
                </ListView>
            </StackPanel>
        </Grid>
        <!--#endregion-->
        <Grid
            Margin="60,0,0,0"
            Grid.Column="1" 
                x:Name="contentArea"
            MouseDown="contentArea_MouseDown"
              Grid.Row="2" >
            <ScrollViewer
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Hidden">
            <StackPanel >
                    <Grid 
            MouseDown="contentArea_MouseDown"
                    Margin="0,20,0,0">
                    <TextBlock
                        Margin="10,10,0,0"
                        Foreground="{DynamicResource SecondaryBrush}"
                        FontWeight="SemiBold"
                        FontSize="22"
                        Text="{DynamicResource catalogText}"
                        VerticalAlignment="Bottom"/>
                </Grid>
                    <ItemsControl 
                    x:Name="itemsControl">
                        <ItemsControl.ItemTemplate>
                        <DataTemplate >
                            <Border 
                                Margin="10" 
                                Width="200" 
                                Height="360" 
                                MouseLeftButtonDown="ShowProductInfo">
                                    <StackPanel >
                                    <Border Width="200" Height="300" CornerRadius="10" Margin="0">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="1"/>
                                        </Border.Effect>
                                        <Border.Background>
                                            <ImageBrush ImageSource="{Binding ImagePath}"/>
                                        </Border.Background>
                                    </Border>
                                    <TextBlock Margin="5 0" Text="{Binding Name}"
                                               FontSize="15"
                                               FontWeight="Bold"
                                               TextWrapping="Wrap"
                                               Foreground="{DynamicResource SecondaryBrush}"/>

                                        <StackPanel
                                        Orientation="Horizontal">
                                        <TextBlock 
                                            Style="{StaticResource PriceStyle}"
                                            Margin="5" 
                                            Text="{Binding Price, StringFormat={}{0:C}}"
                                               FontSize="17" 
                                               FontFamily="Franklin Gothic Medium"
                                               Foreground="{DynamicResource SecondaryBrush}"/>

                                        <TextBlock Margin="5" Text="{Binding DiscountedPrice, StringFormat={}{0:C}}"
                                               FontSize="17" 
                                               FontFamily="Franklin Gothic Medium"
                                               Foreground="{DynamicResource SecondaryBrush}"
                                                   Visibility="{Binding Discount, Converter={StaticResource ZeroToCollapsedConverter}}" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                       ItemWidth="220" ItemHeight="400" Orientation="Horizontal" 
                       VerticalAlignment="Top" HorizontalAlignment="Left" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
        </Grid>
        <!--#endregion-->
    </Grid>
</Window>
